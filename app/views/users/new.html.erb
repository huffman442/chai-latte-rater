<% provide(:title, "Sign Up") %>
<div class="col-md-6">
<h1 class="row">Sign up</h1>
<div class="row">
    <div class="col-md-4">
        <%= form_with(model: @user, local: true) do |f| %>
            <div id="sign-up-form-field-container">
            <div class="row">
                <%= f.label :name, class:"mdc-text-field mdc-text-field--outlined"  do %>
                    <span class="mdc-notched-outline">
                        <span class="mdc-notched-outline__leading"></span>
                        <span class="mdc-notched-outline__notch">
                        <span class="mdc-floating-label">Your Name</span>
                        </span>
                        <span class="mdc-notched-outline__trailing"></span>
                    </span>
                    <%= f.text_field :name, class:"mdc-text-field__input" %>
                <% end %>
            </div>
            <div class="row">
            <%= f.label :email, class:"mdc-text-field mdc-text-field--outlined"  do %>
                <span class="mdc-notched-outline">
                    <span class="mdc-notched-outline__leading"></span>
                    <span class="mdc-notched-outline__notch">
                    <span class="mdc-floating-label">Email</span>
                    </span>
                    <span class="mdc-notched-outline__trailing"></span>
                </span>
                <%= f.email_field :email, class:"mdc-text-field__input" %>
            <% end %>
            </div>
            <div class="row">
            <%= f.label :password, class:"mdc-text-field mdc-text-field--outlined"  do %>
                <span class="mdc-notched-outline">
                    <span class="mdc-notched-outline__leading"></span>
                    <span class="mdc-notched-outline__notch">
                    <span class="mdc-floating-label">Password</span>
                    </span>
                    <span class="mdc-notched-outline__trailing"></span>
                </span>
                <%= f.password_field :password, class:"mdc-text-field__input" %>
            <% end %>
            </div>
            <div class="row">
            <%= f.label :password_confirmation, class:"mdc-text-field mdc-text-field--outlined"  do %>
                <span class="mdc-notched-outline">
                    <span class="mdc-notched-outline__leading"></span>
                    <span class="mdc-notched-outline__notch">
                    <span class="mdc-floating-label">Password Confirmation</span>
                    </span>
                    <span class="mdc-notched-outline__trailing"></span>
                </span>
                <%= f.password_field :password_confirmation, class:"mdc-text-field__input" %>
            <% end %>
            </div>

            <div class="row">
            <button class="mdc-button mdc-button--raised">
                <div class="mdc-button__ripple"></div>
                <span class="mdc-button__label">Create My Account</span>
            </button>
            </div>
        <% end %>
    </div>
</div>